<div class="container">
    <div class="row">
        <div class="col">
            <h1>CART</h1>
        </div>
        <div class="col">
            <form class="d-flex" action="/order" method="GET">
                <button class="btn btn-primary" type="submit">Order</button>
            </form>
        </div>
    </div>
    <% cart.items.forEach(function (product, index){ %>
        <hr>
        <h2><%= product.productId %> </h2>
        <p>Variations: <%= product.variant.variation_values.color %> <%= product.variant.variation_values.size %></p>
        <p>Price: <%= product.variant.price %> USD</p>
        <p>Quantity: <%= product.quantity %></p>
        <div class="row">
            <div class="col">
                <div class="row">
                    <div class="col">
                        <form class="d-flex">
                            <button class="btn btn-outline-success" type="submit">Order</button>
                        </form>
                    </div>
                    <div class="col">
                        <form class="d-flex" action="cart/removeItem?_method=DELETE" method="POST">
                            <input type="hidden" name="productId" value="<%= product.productId %>">
                            <input type="hidden" name="variantId" value="<%= product.variant.product_id %>">
                            <button class="btn btn-outline-danger" type="submit">Remove from cart</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col">
                <form class="d-flex" action="cart/changeItemQuantity" method="POST">
                    <input type="hidden" name="productId" value="<%= product.productId %>">
                    <input type="hidden" name="variantId" value="<%= product.variant.product_id %>">
                    <input type="hidden" name="quantity" value="<%= product.quantity + 1 %>">
                    <button class="btn btn-outline-info" type="submit">Add one more to the cart.</button>
                </form>

                <form class="d-flex" action="cart/changeItemQuantity" method="POST">
                    <input type="hidden" name="productId" value="<%= product.productId %>">
                    <input type="hidden" name="variantId" value="<%= product.variant.product_id %>">
                    <input type="hidden" name="quantity" value="<%= product.quantity - 1 %>">
                    <button class="btn btn-outline-info" type="submit">Remove one from the cart.</button>
                </form>
            </div>
        </div>
    <% }) %> 
    <hr>
</div>